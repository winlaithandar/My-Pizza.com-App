<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/menu1ImageView"
        android:layout_width="@dimen/photo_width"
        android:layout_height="@dimen/photo_height"
        android:layout_marginStart="@dimen/photo_margin_start"
        android:layout_marginTop="@dimen/photo_margin_top"
        android:padding="@dimen/photo_padding"
        app:srcCompat="@drawable/pizza_menu1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/container_margin_start"
        android:layout_marginTop="@dimen/container_margin_top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="@dimen/menus_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/menuDesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="@dimen/description_text_size" />
    </LinearLayout>
</LinearLayout>