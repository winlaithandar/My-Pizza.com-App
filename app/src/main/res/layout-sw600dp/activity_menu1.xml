<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_img"
    android:orientation="vertical"
    tools:context=".Menu1Activity">

    <ImageView
        android:id="@+id/topBarImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:contentDescription="@string/top_bar_img"
        app:srcCompat="@drawable/top_bar_img" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pizzaMenu1ImageView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/pizza_menu1" />

        <TextView
            android:id="@+id/dealsMenu1TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start"
            android:fontFamily="cursive"
            android:text="@string/pizza_menu1"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="@dimen/menu_text_size_tablet"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/PizzaMenuDesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_tablet"
            android:layout_marginTop="600dp"
            android:layout_marginEnd="@dimen/margin_end"
            android:text="@string/pizza_menu1_des"
            android:textSize="@dimen/text_size_tablet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_tablet"
            android:layout_marginTop="800dp"
            android:text="@string/pizza_size_and_crust"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_tablet" />

        <Spinner
            android:id="@+id/pizzaSizeAndCrustSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_tablet"
            android:layout_marginTop="840dp"
            android:textSize="@dimen/text_size_tablet" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_tablet"
            android:layout_marginTop="880dp"
            android:textSize="@dimen/text_size_tablet" />

        <Button
            android:id="@+id/purchaseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1000dp"
            android:layout_marginBottom="@dimen/margin_end_tablet"
            android:onClick="purchaseOnButtonClick"
            android:text="@string/purchase"
            android:textSize="@dimen/text_size_tablet" />

    </androidx.cardview.widget.CardView>


</LinearLayout>